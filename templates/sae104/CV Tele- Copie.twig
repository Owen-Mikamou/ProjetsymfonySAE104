{% extends 'base.html.twig' %}

{% block title %}Accueil - Portfolio de Owen Mikamou{% endblock %}

{% block stylesheets %}
<style>
    /* Arrière-plan en noir */
    body {
        background: #000000; /* Fond noir */
        font-family: Arial, sans-serif;
        color: #ffffff; /* Texte en blanc */
    }

    /* Espacement et alignement */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgba(3, 0, 0, 0.05); /* Fond légèrement transparent */
        border-radius: 15px;
        box-shadow: 0 4px 30px rgba(255, 255, 255, 0.1); /* Ombre légère */
        backdrop-filter: blur(10px);
    }

    /* Style des boutons de langue */
    .language-buttons {
        text-align: right;
        margin-bottom: 20px;
    }

    .language-buttons button {
        margin-left: 10px;
        background-color: #333333; /* Gris foncé */
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .language-buttons button:hover {
        background-color: #555555; /* Gris plus clair au survol */
    }

    /* Style des cartes de projets */
    .card {
        margin-bottom: 20px;
        border: none;
        border-radius: 8px;
        background-color: rgba(255, 255, 255, 0.05); /* Fond légèrement transparent */
        box-shadow: 0 2px 4px rgba(255, 255, 255, 0.1); /* Ombre légère */
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-body {
        padding: 20px;
        color: #ffffff; /* Texte en blanc */
    }

    /* Style des listes */
    .list-group-item {
        border: none;
        padding: 10px 15px;
        background-color: rgba(255, 255, 255, 0.05); /* Fond légèrement transparent */
        color: #ffffff; /* Texte en blanc */
        margin-bottom: 10px;
        border-radius: 5px;
    }

    /* Icônes Font Awesome */
    .fas, .fab {
        margin-right: 10px;
        color: #ffffff; /* Icônes en blanc */
    }

    /* Liens */
    a {
        color: #ffffff; /* Liens en blanc */
        text-decoration: none;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #cccccc; /* Gris clair au survol */
    }

    /* Titres */
    h1, h2, h3, h4, h5, h6 {
        color: #ffffff; /* Titres en blanc */
    }

    /* Texte en gras */
    .lead {
        font-weight: bold;
    }
</style>
{% endblock %} {# Fermeture du bloc stylesheets #}

